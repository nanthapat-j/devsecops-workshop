{
  "name": "devsecops-ecommerce-backend",
  "version": "1.0.0",
  "description": "Secure E-commerce Backend API - DevSecOps Workshop Thai Market",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:api": "newman run tests/api/postman-collection.json",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "security:audit": "npm audit --audit-level=high",
    "security:snyk": "snyk test",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "helmet": "^6.0.1",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.0.3",
    "pg": "^8.10.0",
    "knex": "^2.4.2",
    "redis": "^4.6.5",
    "winston": "^3.8.2",
    "joi": "^17.8.3",
    "uuid": "^9.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-slow-down": "^1.6.0",
    "express-brute": "^1.0.1",
    "@types/express": "^4.17.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/compression": "^1.7.2"
  },
  "devDependencies": {
    "typescript": "^5.0.2",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^2.8.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "newman": "^5.3.2",
    "snyk": "^1.1143.0"
  },
  "keywords": [
    "devsecops",
    "security",
    "nodejs",
    "express",
    "typescript",
    "ecommerce",
    "api",
    "thai-market",
    "pdpa-compliant",
    "microservices"
  ],
  "author": {
    "name": "DevSecOps Workshop",
    "email": "workshop@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nanthapat-j/devsecops-workshop.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/?(*.)(test|spec).ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:coverage && npm run security:audit"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "plugin:security/recommended"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "security/detect-object-injection": "error",
      "security/detect-non-literal-fs-filename": "error",
      "security/detect-unsafe-regex": "error",
      "security/detect-non-literal-regexp": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "no-console": "warn"
    }
  }
}